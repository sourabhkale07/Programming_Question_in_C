#include<iostream>
using namespace std;

int main(){
    
    int y;
    cout<<"Enter the year:"<<endl;
    cin>>y;
    
    if(y%100 ==0){
        cout<<"Y is a century year"<<endl;
        if(y%400 == 0){
            cout<<"Y  is a leap year"<<endl;
        }
        else{
            cout<<" But Y is not a leap year"<<endl;
        }
    }
    else if(y%4 ==0){
        cout<<"Entered year is a leap year"<<endl;
    }
    
    else{
        cout<<"Entered year is not a leap year"<<endl;
    }
    
}    
    
