#include<iostream>
using namespace std;

int factorial(int a){
    if(a==1){
        return 1;
    }
    else{
        return a* factorial(a-1);
    }
}

int main(){
    
    int i;
    double sum =0,fact;
    
    for(i=1;i<=7;i++){
        fact = factorial(i);
        sum+= i/fact;
        
    }
    
    cout<<sum<<endl;
}
   
